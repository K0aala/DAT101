"use strict"

const RAD = math.PI / 180;

class TSinWave {
#amplitude;
#frequency; 
#angle

constructor(aAmplitude, aFrequency){
this.#amplitude = aAmplitude;
this.#frequency =aFrequency;
this.#angle = 0 
}

get value(){
    let value = this.#amplitude * Math.sin(this#angle * RAD);
    this.#angle += this.#frequency;
    return value;

}

}

TSinWave